# Facebook Automation Framework - Environment Variables
# Copy this file to .env and fill in your values

# Facebook Credentials (REQUIRED)
FACEBOOK_EMAIL=your_email@example.com
FACEBOOK_PASSWORD=your_password

# Browser Settings
BROWSER_TYPE=chrome
HEADLESS_MODE=False
WINDOW_SIZE=1920,1080

# Automation Settings
IMPLICIT_WAIT=10
PAGE_LOAD_TIMEOUT=30
SCRIPT_TIMEOUT=30

# Proxy Settings (Optional)
USE_PROXY=False
PROXY_HOST=
PROXY_PORT=

# Anti-Detection Settings
USE_UNDETECTED_CHROME=True
RANDOM_USER_AGENT=True

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=logs/facebook_automation.log

# Screenshot Settings
TAKE_SCREENSHOTS=True
SCREENSHOT_DIR=screenshots

# Performance Settings
LOAD_IMAGES=False
LOAD_CSS=True
LOAD_JAVASCRIPT=True

# Game Settings
GAME_LOAD_TIMEOUT=60
ACTION_DELAY_MIN=1.0
ACTION_DELAY_MAX=3.0

# API Settings
API_HOST=0.0.0.0
API_PORT=5005
API_DEBUG=True

# Database Settings
DATABASE_URL=sqlite:///facebook_automation.db

# External APIs (Optional)
WEBHOOK_URL=
NOTIFICATION_API=
